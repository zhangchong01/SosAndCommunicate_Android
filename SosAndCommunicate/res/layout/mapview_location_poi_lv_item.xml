<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMLPIItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_middleblue_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/ivMLISelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/success"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ivMLISelected"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvMLIPoiName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@drawable/selector_black_white_textcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvMLIPoiAddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@drawable/selector_black_white_textcolor"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>